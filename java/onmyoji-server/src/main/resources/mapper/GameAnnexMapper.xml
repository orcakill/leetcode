<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.GameAnnexMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.model.entity.GameAnnexPO">
            <id property="code" column="code" jdbcType="VARCHAR"/>
            <id property="parentCode" column="parent_code" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="number" column="number" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        code,parent_code,name,
        number
    </sql>

    <select id="findList" parameterType="map" resultType="com.example.demo.model.entity.GameAnnexPO">
        select
        <include refid="Base_Column_List"/>
        from game_annex
        where 1=1
        <if test="map.code != null and map.code!=''">
            and code= #{map.code}
        </if>
        <if test="map.parentCode != null and map.parentCode !=''">
            and parent_code= #{map.parentCode}
        </if>
        order by number
    </select>
</mapper>
